<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.achapet">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoAppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/NoAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.Pet.cadastro.PetCadastroActivity" />
        <activity android:name=".Activity.Pet.detalhe.DetalhePetActivity" />
        <activity android:name=".Activity.Pet.PetActivity" android:theme="@style/NoAppTheme" />
        <activity android:name=".Activity.Pessoa.RecuperarSenhaPessoaActivity" android:theme="@style/NoAppTheme" />
        <activity android:name=".Activity.Pessoa.CadastroPessoaActivity" android:theme="@style/NoAppTheme" />
        <activity android:name=".Activity.Pessoa.LoginPessoaActivity" android:theme="@style/NoAppTheme" />
        <activity android:name=".Activity.SplashScreenActivity" android:theme="@style/NoAppTheme" />
    </application>

</manifest>